<Protocols xmlns="http://www.TheBraves.com/XMLProtocol" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.TheBraves.com/XMLProtocol ProtocolDef.xsd">
	<ProtocolGroup Name="RankingServer" GenParameterRouteContext="true" IsMobile="false" IsServer="true" Desc="Game ranking Server Protocol">

    <!-- ============================  Ranking ============================================ -->

    <Command Name="AddPlayer" Reliable="true" Crypto="No" Trace="DBG1" Desc="Add a player to ranking">
		  <Cmd>
        <Params Type="PlayerInformation" Name="PlayerInfo"/>
        <Params Type="uint64" Name="RankingScore"/>
		</Cmd>
		  <Res>
        <Params Type="uint32" Name="Ranking"/>
	  	</Res>
	  </Command>

    <Command Name="RemovePlayer" Reliable="true" Crypto="No" Trace="DBG1" Desc="Remove a player to ranking">
      <Cmd>
        <Params Type="PlayerID" Name="PlayerID"/>
      </Cmd>
      <Res>
      </Res>
    </Command>

    <Command Name="GetPlayerRanking" Reliable="true" Crypto="No" Trace="DBG1" Desc="Remove a player to ranking">
      <Cmd>
        <Params Type="PlayerID" Name="PlayerID"/>
      </Cmd>
      <Res>
        <Params Type="uint32" Name="Ranking"/>
      </Res>
    </Command>

    <Command Name="UpdatePlayerScore" Reliable="true" Crypto="No" Trace="DBG1" Desc="Update a player to ranking">
      <Cmd>
        <Params Type="uint32" Name="RankingScore"/>
        <Params Type="PlayerInformation" Name="PlayerInfo"/>
        <Params Type="uint16" Name="Count" Desc="Number of playerinformation to query"/>
      </Cmd>
      <Res>
        <Params Type="TotalRankingPlayerInformation" Name="Ranking" IsArray="true"/>
      </Res>
    </Command>


    <Command Name="GetRanking" Reliable="true" Crypto="No" Trace="DBG1" Desc="Get ranking list">
      <Cmd>
        <Params Type="RankingType" Name="RankingType"/>
        <Params Type="uint16" Name="BaseRanking" Desc="Base ranking to query, 0 based ranking order"/>
        <Params Type="uint16" Name="Count" Desc="Number of playerinformation to query"/>
      </Cmd>
      <Res>
        <Params Type="TotalRankingPlayerInformation" Name="Ranking" IsArray="true"/>
      </Res>
    </Command>

    <!-- =============================  ======================================= -->

	</ProtocolGroup>
</Protocols>
