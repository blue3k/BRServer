<Protocols xmlns="http://www.TheBraves.com/XMLProtocol" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.TheBraves.com/XMLProtocol ProtocolDef.xsd">
	<ProtocolGroup Name="Ranking" GenParameterRouteContext="true" IsMobile="false" IsServer="true" Desc="Game ranking Server Protocol">

    <!-- ============================  Ranking ============================================ -->

    <Command Name="AddPlayer" Reliable="true" Crypto="No" Trace="DBG1" Desc="Add a player to ranking">
		  <Cmd>
        <Params Type="PlayerID" Name="PlayerID"/>
        <Params Type="uint64" Name="RankingScore"/>
        <Params Type="BYTE" IsArray="true" Name="PlayerInfo"/>
      </Cmd>
		  <Res>
        <Params Type="uint32" Name="Ranking"/>
	  	</Res>
	  </Command>

    <Command Name="RemovePlayer" Reliable="true" Crypto="No" Trace="DBG1" Desc="Remove a player to ranking">
      <Cmd>
        <Params Type="PlayerID" Name="PlayerID"/>
      </Cmd>
      <Res>
      </Res>
    </Command>

    <Command Name="GetPlayerRanking" Reliable="true" Crypto="No" Trace="DBG1" Desc="Remove a player to ranking">
      <Cmd>
        <Params Type="PlayerID" Name="PlayerID"/>
      </Cmd>
      <Res>
        <Params Type="uint32" Name="Ranking"/>
      </Res>
    </Command>

    <Command Name="UpdatePlayer" Reliable="true" Crypto="No" Trace="DBG1" Desc="Update a player to ranking">
      <Cmd>
        <Params Type="PlayerID" Name="PlayerID"/>
        <Params Type="uint64" Name="RankingScore"/>
        <Params Type="BYTE" IsArray="true" Name="PlayerInfo"/>
      </Cmd>
      <Res>
        <Params Type="uint32" Name="Ranking"/>
      </Res>
    </Command>


    <Command Name="GetRanking" Reliable="true" Crypto="No" Trace="DBG1" Desc="Remove a player to ranking">
      <Cmd>
        <Params Type="uint32" Name="From"/>
        <Params Type="uint32" Name="Count"/>
      </Cmd>
      <Res>
        <Params Type="uint32" Name="PlayerRanking"/>
      </Res>
    </Command>

    <!-- =============================  ======================================= -->

	</ProtocolGroup>
</Protocols>
